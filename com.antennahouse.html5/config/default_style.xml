<style-definition xmlns="http://www.antennahouse.com/names/XSLT/Document/Layout">
    
    <include href="default_equation_style.xml"/>
    <include href="default_xml_mention_style.xml"/>
    
    <variables>
        <variable name="XmlDeclaration">&lt;?xml version="1.0" encoding="UTF-8"?&gt;&#x0A;</variable>
        <variable name="Html5DocType">&lt;!DOCTYPE HTML"&gt;&#x0A;</variable>
        

        <!-- User interface -->
        <variable name="MenuCascade_Symbol">&gt;</variable>
        <variable name="UiControl_Prefix">[&#x200D;</variable>
        <variable name="UiControl_Suffix">&#x200D;]</variable>

        <!-- Title Literals -->
        <variable name="Part_Title_Prefix">Part </variable>
        <variable name="Part_Title_Suffix"/>
        <variable name="Chapter_Title_Prefix">Chapter </variable>
        <variable name="Chapter_Title_Suffix"/>

        <variable name="Toc_Title">Contents</variable>
        <variable name="Figure_List_Title">Figures</variable>
        <variable name="Table_List_Title">Tables</variable>
        <variable name="Abbreviations_List_Title">Abbreviations</variable>
        <variable name="Trademark_List_Title">Trademarks</variable>
        <variable name="Bibliographic_List_Title">Bibliography</variable>
        <variable name="Glossary_List_Title">Glossary</variable>
        <variable name="Appendices_Title">Appendices</variable>
        <variable name="Appendix_Title">Appendix </variable>
        <variable name="Index_Title">Index</variable>

        <variable name="Notice_Title">Notice</variable>
        <variable name="Preface_Title">Preface</variable>

        <variable name="Table_Title">Table </variable>
        <variable name="Figure_Title">Figure </variable>

        <!-- Literals for related-links -->
        <variable name="Parent_Topic">Parent topic: </variable>
        <variable name="Next_Topic">Next topic: </variable>
        <variable name="Previous_Topic">Previous topic: </variable>
        <variable name="Related_Topic">Related topic: </variable>
        
        <!-- Literals for task/step -->
        <variable name="Step_Optional">Optional: </variable>
        <variable name="Step_Required">Required: </variable>

        <!-- Literals for choicetable header -->
        <variable name="Choptionhd">Option</variable>
        <variable name="Chdeschd">Description</variable>

        <!-- Literals for note -->
        <variable name="Note_Note">Note</variable>
        <variable name="Note_Tip">Tip</variable>
        <variable name="Note_FastPath">Fast Path</variable>
        <variable name="Note_Restriction">Restriction</variable>
        <variable name="Note_Important">Important</variable>
        <variable name="Note_Remember">Remember</variable>
        <variable name="Note_Attention">Attention</variable>
        <variable name="Note_Caution">Caution</variable>
        <variable name="Note_Notice">Notice</variable>
        <variable name="Note_Danger">Danger</variable>
        <variable name="Note_Warning">Warning</variable>
        <variable name="Note_Trouble">Trouble</variable>
        <variable name="Note_Other">Other</variable>
        <variable name="Note_Information">Information</variable>
        <!-- if user use type="other", the coresponding variable with @othertype must be defined -->

        <!-- Publish date format string -->
        <variable name="Publish_Date_Picture">[MNn].[D1],[Y1,4]</variable>

        <!-- Cite -->
        <variable name="Cite_Prefix"/>
        <variable name="Cite_Suffix"/>

        <!-- Q(uote) -->
        <variable name="Q_Prefix">“</variable>
        <variable name="Q_Suffix">”</variable>

        <!-- Xref -->
        <variable name="Xref_Step_Prefix">step&#xA0;</variable>
        <variable name="Xref_Step_Substep_Separator">.</variable>
        
        <!-- Draft-comment -->
        <variable name="Draft_Comment_Title_Prefix">[DRAFT-COMMENT </variable>
        <variable name="Draft_Comment_Author"> Author:</variable>
        <variable name="Draft_Comment_Time"> Time:</variable>
        <variable name="Draft_Comment_Disposition"> Status:</variable>
        <variable name="Draft_Comment_Title_Suffix">]</variable>

        <!-- Trade Mark -->
        <variable name="Tm_Symbol_Tm">&#x200D;&#x2122;</variable>
        <variable name="Tm_Symbol_Reg">&#x200D;&#x00AE;</variable>
        <variable name="Tm_Symbol_Service">&#x200D;&#x2120;</variable>

        <variable name="Tm_Symbol_Tm_Text">&#x2122;</variable>
        <variable name="Tm_Symbol_Reg_Text">&#x00AE;</variable>
        <variable name="Tm_Symbol_Service_Text">&#x2120;</variable>

        <!-- Required-cleanup -->
        <variable name="Required_Cleanup_Title_Prefix">[REQUIRED-CLEANUP </variable>
        <variable name="Required_Cleanup_Remap"> Remap:</variable>
        <variable name="Required_Cleanup_Title_Suffix">]</variable>

        <!-- Footnote related -->
        <variable name="Footnote_Ref_Prefix">*</variable>
        <variable name="Footnote_Ref_Suffix"/>
        <variable name="Footnote_List_Sep">: </variable>

        <!-- Number format of ol (Format string separate by space!) -->
        <variable name="Ol_Number_Formats" delim="[,\s]+">1 a i</variable>
        
        <!-- Number format of step/substep (Format string separate by space!) -->
        <variable name="Step_Number_Formats" delim="[,\s]+">1 a</variable>
        
        <!-- Syntaxdiagram -->
        <variable name="Sd_Or"> | </variable>
        <variable name="Sd_Choice_Prefix"> {</variable>
        <variable name="Sd_Choice_Suffix">} </variable>
        <variable name="Sd_Optional_Prefix"> [</variable>
        <variable name="Sd_Optional_Suffix">] </variable>
        <variable name="Sd_Fragment_Ref_Prefix"> &lt;</variable>
        <variable name="Sd_Fragment_Ref_Suffix">&gt; </variable>
        <variable name="Sd_Note_Prefix"> *</variable>
        <variable name="Sd_Repeat_Prefix"> (</variable>
        <variable name="Sd_Repeat_Suffix">) </variable>
        <variable name="Sd_Required_Symbol"> + </variable>
        <variable name="Sd_Optional_Symbol"> * </variable>

        <!-- Index related -->
        <!-- Index See prefix and suffix -->
        <variable name="Index_Symbol_Label">Symbols</variable>
        <variable name="See_Prefix_Level1">, see </variable>
        <variable name="See_Suffix_Level1"/>
        <variable name="See_Prefix_Level2">see </variable>
        <variable name="See_Suffix_Level2"/>

        <!-- Index See Also prefix and suffix -->
        <variable name="See_Also_Prefix">see also </variable>
        <variable name="See_Also_Suffix"/>

        <!-- Evidence of dead link -->
        <variable name="Dead_Link_PDF">deadlink.pdf</variable>

        <!-- floating figure outputclass -->
        <variable name="ocFloatNone">float-none</variable>
        <variable name="ocFloatLeft">float-left</variable>
        <variable name="ocFloatRight">float-right</variable>
        <variable name="ocFloatFigure" delim="[,\s]+">$ocFloatNone $ocFloatLeft $ocFloatRight</variable>

        <variable name="ocFloatAuto">float-auto</variable>
        <variable name="ocFloatFigGroup" delim="[,\s]+">$ocFloatAuto $ocFloatLeft $ocFloatRight</variable>
        
        <!-- Clear -->
        <variable name="ocClearBoth">clear-both</variable>
        <variable name="ocClearLeft">clear-left</variable>
        <variable name="ocClearRight">clear-right</variable>
        <variable name="ocClearNone">clear-none</variable>

        <!-- Collation URI for Saxon 9 -->
        <variable name="cCollationURI">http://saxon.sf.net/collation?lang=en;</variable>

        <!-- Plug-in relative path test -->
        <variable name="cNoteIcon">%plug-in-path%common-graphic/note.png</variable>

        <!-- Check mark -->
        <variable name="cCheckYes">&#x2713;</variable>
        <variable name="cCheckNo">&#x2717;</variable>
        <variable name="cCheckDc">-</variable>
        
        <!-- Variables for rotated table cell-->
        <!-- Average character width per em
             Font: Times New Roman (times.ttf)
             xAvgCharWidth (OS/2 table) / unitsPerEm (head table) = 821 ÷ 2048 ≒ 0.4
             This value can be overridden by fo:prop="ahs-avg-char-width-in-table-entry:[value];"
          -->
        <variable name="Avg_Char_Width_In_Table_Entry">0.4</variable>
        
        <!-- Max character count in rotated table cell
             This value can be overridden by fo:prop="ahs-max-char-count-in-rotated-table-entry:[value];"
          -->
        <variable name="Max_Char_Count_In_Rotated_Table_Entry">60</variable>
        
        <!-- Default image resolution -->
        <variable name="Default_Image_Dpi">96</variable>
        
        <!-- Topic title class (Precedes topic level) -->
        <variable name="Topic_Title_Heading_Class">topic-title-</variable>

        <!-- HTML Title ID Prefix -->
        <variable name="Topic_Title_Id_Prefix">ariaid-title-</variable>
        
        <!-- Section/example title class -->
        <variable name="Section_Title_Class">section-title</variable>
        
        <!-- Simpletable default class value
             frame: all
             all cell has column and row border
          -->
        <variable name="SimpleTable_Class_Opt">frame-all</variable>
        <variable name="SimpleTable_Header_Cell_Class">colsep-1 rowsep-1</variable>
        <variable name="SimpleTable_Body_Cell_Class">colsep-1 rowsep-1</variable>
        
        <!-- ol,ul,sl,dl compact formatting @class token-->
        <variable name="Compact_Class_Token">compact-yes</variable>

        <!-- fig frame formatting @class token-->
        <variable name="Fig_Frame_All">fig-frame-all</variable>
        <variable name="Fig_Frame_Sides">fig-frame-sides</variable>
        <variable name="Fig_Frame_Top">fig-frame-top</variable>
        <variable name="Fig_Frame_Bottom">fig-frame-bottom</variable>
        <variable name="Fig_Frame_Topbot">fig-frame-topbot</variable>
        <variable name="Fig_Frame_None">fig-frame-none</variable>
        
        <!-- Block image formatting @class token -->
        <variable name="Image_Wrapper">image-wrapper</variable>
        <variable name="Image_Left">image-left</variable>
        <variable name="Image_Right">image-right</variable>
        <variable name="Image_Center">image-center</variable>
        
        <!-- Dl formatted as table @class token -->
        <variable name="DL_Table">dl-table</variable>
        <variable name="DL_Dlhead_Thead">dl-dlhead-thead</variable>
        <variable name="DL_Dlhead_Tr">dl-dlhead-tr</variable>
        <variable name="DL_Dlhead_Th">dl-dlhead-th</variable>
        <variable name="DL_Tbody">dl-tbody</variable>
        <variable name="DL_Dlentry_Tr">dl-dlentry-tr</variable>
        <variable name="DL_Dt_Td">dl-dt-td</variable>
        <variable name="DL_Dd_Td">dl-dd-td</variable>
        <variable name="DL_Dt_Span">dl-dt-span</variable>
        <variable name="DL_Dd_Span">dl-dd-span</variable>
        
        <!-- fn: footnore refernce char & footnote body @class token-->
        <variable name="Fn_Ref">fn-ref</variable>
        <variable name="Fn_Body">fn-body</variable>
        <variable name="Fn_List">fn-list</variable>
        
        <!-- No list style -->
        <variable name="List_Style_None">list-style-none</variable>
        
        <!-- ul list style type class -->
        <variable name="Ul_Style_Class_Html" delim="[,\s]+">list-style-disc list-style-circle list-style-square</variable>
        
        <!-- ol list style type class -->
        <variable name="Ol_Style_Class_Html" delim="[,\s]+">list-style-decimal list-style-lower-alpha list-style-lower-roman</variable>
        <variable name="Ol_Number_Formats" delim="[,\s]+">1. a. i.</variable>
        
        <!-- Note -->
        <variable name="Note_Title">note-title</variable>
        
    </variables>
    
    <attribute-sets>
        <attribute-set name="atsRtl">
            <attribute name="dir">rtl</attribute>
        </attribute-set>
        
        <attribute-set name="atsMain">
        </attribute-set>
        
        <attribute-set name="atsArticle">
        </attribute-set>

        <attribute-set name="atsTopicContent">
            <attribute name="class">topic-content</attribute>
        </attribute-set>

        <attribute-set name="atsRelatedLinks">
            <attribute name="role">navigation</attribute>
        </attribute-set>
        
        <attribute-set name="atsUlChildLinks">
            <attribute name="class">ul-child-links</attribute>
        </attribute-set>

        <attribute-set name="atsOlChildLinks">
            <attribute name="class">ol-child-links</attribute>
        </attribute-set>

        <attribute-set name="atsFamilyLinks">
            <attribute name="class">family-links</attribute>
        </attribute-set>
        
        <attribute-set name="atsParentLink">
            <attribute name="class">parent-link</attribute>
        </attribute-set>
        
        <attribute-set name="atsPreviousLink">
            <attribute name="class">previous-link</attribute>
        </attribute-set>

        <attribute-set name="atsNextLink">
            <attribute name="class">next-link</attribute>
        </attribute-set>
        
        <attribute-set name="atsFriendLinks">
            <attribute name="class">friend-links</attribute>
        </attribute-set>

        <attribute-set name="atsFriendLinksLabel">
            <attribute name="class">link-label</attribute>
        </attribute-set>

        <attribute-set name="atsFriendLinksUl">
            <attribute name="class">ul-friend-links</attribute>
        </attribute-set>

        <attribute-set name="atsLinkLabel">
            <attribute name="class">link-label</attribute>
        </attribute-set>
        
        <attribute-set name="atsOlUlCompact">
            <attribute name="line-height">80%</attribute>
        </attribute-set>
        
        <!-- Highlight domain -->
        <attribute-set name="atsTt">
            <attribute name="style">font-family: monospace;</attribute>
        </attribute-set>

        <attribute-set name="atsLineThrough">
            <attribute name="style">text-decoration: line-through;</attribute>
        </attribute-set>

        <attribute-set name="atsOverLine">
            <attribute name="style">text-decoration: overline;</attribute>
        </attribute-set>
        
        <!-- lines -->
        <attribute-set name="atsLines">
            <attribute name="style">white-space: pre-line;</attribute>
        </attribute-set>
        
        
    </attribute-sets>

    <xml-objects>
        
        <xml-object name="xmlMetaCharset"><meta charset="UTF-8"/></xml-object>
        
        <!-- Excluded because not recommended now and after: https://developer.mozilla.org/ja/docs/Web/HTML/Element/meta -->
        <!--meta http-equiv="Content-Type" content="text/html; charset=utf-8"/-->
        
        <xml-object name="xmlMetaDefaultCopyright"><meta name="copyright" content="(C) Copyright %year"/>
<meta name="DC.rights.owner" content="(C) Copyright %year"/></xml-object>
        
        <xml-object name="xmlMetaDefaultMeta"><meta name="security" content="public"/><meta name="robots" content="index,follow"/></xml-object>
        
        <xml-object name="xmlMetaCopyright"/>
        
        <xml-object name="xmlMetaCssLink"><link rel="stylesheet" type="text/css" href="%css-path"/></xml-object>
        
        <xml-object name="xmlMetaShortdesc"><meta name="shortdesc" content="%shortdesc"/>
<meta name="description" content="%shortdesc"/>
</xml-object>
        
        <xml-object name="xmlMetaAbstract"><meta name="abstract" content="%abstract"/>
<meta name="description" content="%shortdesc"/></xml-object>
        
        <xml-object name="xmlMetaType"><meta name="DC.type" content="%type"/></xml-object>
        
        <xml-object name="xmlMetaDescription"><meta name="description" content="%desc"/></xml-object>

        <xml-object name="xmlMetaContributor"><meta name="DC.contributor" content="%contributor"/></xml-object>
        
        <xml-object name="xmlMetaCreator"><meta name="DC.creator" content="%creator"/></xml-object>
        
        <xml-object name="xmlMetaSource"><meta name="DC.source" content="%src"/></xml-object>

        <xml-object name="xmlMetaPublisher"><meta name="DC.publisher" content="%publisher"/></xml-object>

        <xml-object name="xmlMetaRights"><meta name="rights" content="©%copy-year %copy-holder"/></xml-object>

        <xml-object name="xmlMetaRightUsage"><meta name="DC.rights.usage" content="%usage"/></xml-object>
        
        <xml-object name="xmlMetaDateCreated"><meta name="DC.date.created" content="%date"/></xml-object>

        <xml-object name="xmlMetaDateModified"><meta name="DC.date.modified" content="%date"/></xml-object>

        <xml-object name="xmlMetaDateIssued"><meta name="DC.date.issued" content="%date"/>
<meta name="DC.date.available" content="%date"/></xml-object>

        <xml-object name="xmlMetaDateExpiry"><meta name="DC.date.expiry" content="%date"/></xml-object>
        
        <xml-object name="xmlMetaCoverage"><meta name="DC.coverage" content="%coverage"/></xml-object>
        
        <xml-object name="xmlMetaSubject"><meta name="DC.subject" content="%subject"/></xml-object>

        <xml-object name="xmlMetaKeywords"><meta name="keywords" content="%keywords"/></xml-object>
        
        <xml-object name="xmlMetaAudienceExperiencelevel"><meta name="DC.audience.experiencelevel" content="%experiencelevel"/></xml-object>
        
        <xml-object name="xmlMetaAudienceImportance"><meta name="DC.audience.importance" content="%importance"/></xml-object>
        
        <xml-object name="xmlMetaAudienceName"><meta name="DC.audience.name" content="%name"/></xml-object>
        
        <xml-object name="xmlMetaAudienceJob"><meta name="DC.audience.job" content="%job"/></xml-object>

        <xml-object name="xmlMetaAudienceType"><meta name="DC.audience.type" content="%type"/></xml-object>
        
        <xml-object name="xmlMetaProdName"><meta name="prodname" content="%prod-name"/></xml-object>

        <xml-object name="xmlMetaVersion"><meta name="version" content="%version"/></xml-object>

        <xml-object name="xmlMetaRelease"><meta name="release" content="%release"/></xml-object>

        <xml-object name="xmlMetaModification"><meta name="modification" content="%modification"/></xml-object>

        <xml-object name="xmlMetaBrand"><meta name="brand" content="%brand"/></xml-object>

        <xml-object name="xmlMetaComponent"><meta name="component" content="%component"/></xml-object>

        <xml-object name="xmlMetaFeatnum"><meta name="featnum" content="%featnum"/></xml-object>

        <xml-object name="xmlMetaPlatform"><meta name="platform" content="%platform"/></xml-object>
        
        <xml-object name="xmlMetaPrognum"><meta name="prognum" content="%prognum"/></xml-object>

        <xml-object name="xmlMetaSeries"><meta name="series" content="%series"/></xml-object>

        <xml-object name="xmlMetaOther"><meta name="%name" content="%content"/></xml-object>

        <xml-object name="xmlMetaIdentifier"><meta name="DC.identifier" content="%id"/></xml-object>
        
        <xml-object name="xmlMetaLanguage"><meta name="DC.language" content="%lang"/></xml-object>

    </xml-objects>

    <!-- DO NOT REMOVE! Style customization inclusion -->
    <include href="../customization/default_style_custom.xml"/>

</style-definition>
